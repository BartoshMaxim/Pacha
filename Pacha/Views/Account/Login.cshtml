@model Pacha.Models.LoginRegistrationModel

@{
    ViewBag.Title = "Авторизация | Pacha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<section id="loginForm" class="login-form-section">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="home.html">Домой</a></li>
                <li class="active">Авторизация</li>
            </ol>
        </div>
        <div class="row login-form-wrapper">
            <div class="col-sm-4 col-sm-offset-2">
                <h2>Войти в кабинет</h2>
                @using (Html.BeginForm("Login","Account"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.LoginModel.Email, htmlAttributes: new { @class = "col-form-label", Name = "Email" })
                        @Html.EditorFor(model => model.LoginModel.Email, new { htmlAttributes = new { @class = "form-control", Name = "Email",  placeholder = "example@example.com" } })
                        @Html.ValidationMessageFor(model => model.LoginModel.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LoginModel.Password, htmlAttributes: new { @class = "col-form-label" })
                        @Html.EditorFor(model => model.LoginModel.Password, new { htmlAttributes = new { @class = "form-control", Name = "Password", placeholder = "********" } })
                        @Html.ValidationMessageFor(model => model.LoginModel.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.LoginModel.RememberMe, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.LoginModel.RememberMe, new { htmlAttributes = new { id = "stay", Name = "RememberMe" } })
                        @Html.LabelFor(model => model.LoginModel.RememberMe, htmlAttributes: new { @class = "col-form-label" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Войти" class="btn submit-login" />
                        </div>
                    </div>
                }
            </div>
            <div class="col-sm-1">
                <span class="or center-block">или</span>
            </div>
            <div class="col-sm-4">
                <h2>Регистрация</h2>
                @using (Html.BeginForm("Register", "Account"))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.RegisterModel.FirstName, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.RegisterModel.FirstName, new { htmlAttributes = new { @class = "form-control", Name = "FirstName" } })
                            @Html.ValidationMessageFor(model => model.RegisterModel.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RegisterModel.SecondName, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.RegisterModel.SecondName, new { htmlAttributes = new { @class = "form-control", Name = "SecondName" } })
                            @Html.ValidationMessageFor(model => model.RegisterModel.SecondName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RegisterModel.Email, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.RegisterModel.Email, new { htmlAttributes = new { @class = "form-control", Name = "Email", placeholder = "example@example.com" } })
                            @Html.ValidationMessageFor(model => model.RegisterModel.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RegisterModel.Password, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.RegisterModel.Password, new { htmlAttributes = new { @class = "form-control", Name = "Password", placeholder = "********" } })
                            @Html.ValidationMessageFor(model => model.RegisterModel.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.RegisterModel.PasswordConfirm, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.RegisterModel.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", Name = "PasswordConfirm", placeholder = "********" } })
                            @Html.ValidationMessageFor(model => model.RegisterModel.PasswordConfirm, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Зарегистрироваться" class="btn submit-login" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


@section scripts {
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
